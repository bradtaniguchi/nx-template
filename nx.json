{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "nx-template",
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "defaultCollection": "@nrwl/react"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"]
      }
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ]
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "babel": true,
        "strict": true
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint"
      }
    },
    "@nrwl/react:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "strict": true,
      "standaloneConfig": true,
      "buildable": true,
      "publishable": false
    },
    "@nrwl/node:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "strict": true,
      "standaloneConfig": true,
      "buildable": true,
      "publishable": false
    }
  },
  "defaultProject": "internal-client"
}
