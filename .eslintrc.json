{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "jsdoc"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript", "plugin:jsdoc/recommended"],
      "rules": {
        "jsdoc/require-param-type": 0,
        "jsdoc/require-returns": 0
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript", "plugin:jsdoc/recommended"],
      "rules": {}
    }
  ],
  "extends": ["plugin:storybook/recommended"]
}
